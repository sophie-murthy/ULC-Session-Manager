<div class = "login-container shadow-lg rounded">
    <form method = 'POST' action ="/login">
        <h2 class = "login-header">Login</h2>
        {{#if message}}
        <h2 class = "login-error">{{message}}</h2>
        {{/if}}
        <div class="container">
            <input type="text" placeholder="Username" name="username" class = "login-username shadow-lg" required>
            <br>
            <input type="password" placeholder="Password" name="password" class = "login-password shadow-lg" required>
            <br>
            <button type="submit" class = "login-button shadow-lg">Login</button>
            <h2 class = "loginto-register">Don't have an account? <a href="/register" class = "register-link">Register</a></h2>
        </div>
    </form>
</div>